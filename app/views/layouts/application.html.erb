  <a href="/about/school">О школе</a>
  <a href="/about/contacts">Контакты</a>
</div>
<div id="content">
  <%= yield %>
</div>
<footer>
  <p>Полезные ссылки:</p>
  <a href="http://ballov.net">ballov.net</a>
</footer>
</body>
</html>
